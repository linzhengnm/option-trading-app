{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@option-trading/source"],
    "baseUrl": ".",
    "paths": {
      "@option-trading/ui": ["libs/ui/src/index.ts"],
      "@option-trading/auth": ["libs/auth/src/index.ts"],
      "@option-trading/api": ["libs/api/src/index.ts"],
      "@option-trading/models": ["libs/models/src/index.ts"]
    }
  }
}
